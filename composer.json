{
    "name": "rawebone/micro",
    "description": "A minimalist, get-the-job-done web framework with an emphasis on testability",
    "license": "MIT",
    "keywords": [ "web", "micro", "framework", "micro framework", "micro-framework", "testing", "testable" ],
    "authors": [
        {
            "name": "Nick Rawe",
            "email": "nrawe@reapit.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "symfony/http-foundation": "2.4.*",
        "rawebone/service-provider": "1.0.*",
        "rawebone/view-model": "0.*",
        "psr/log": "1.0.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "0.8.*",
        "symfony/browser-kit": "2.4.*"
    },
    "suggest": {
        "symfony/browser-kit": "For use in running functional tests"
    },
    "autoload": {
        "psr-0": {
            "Micro\\": [ "library/", "tests/" ]
        }
    }
}
