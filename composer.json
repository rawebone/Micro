{
    "name": "rawebone/micro",
    "description": "A minimalist, get-the-job-done web framework with an emphasis on testability",
    "license": "MIT",
    "keywords": [ "http", "minimal", "testing", "testable", "web", "micro" ],
    "authors": [
        {
            "name": "Nick Rawe",
            "email": "nrawe@reapit.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "symfony/http-foundation": "2.5.*",
        "psr/log": "1.0.*",
        "shrikeh/teapot": "1.0.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "0.8.*",
        "phpspec/prophecy": "1.1.*"
    },
    "autoload": {
        "psr-0": {
            "Micro\\": [ "library/" ]
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Micro\\Tests\\": [ "tests/" ]
        }
    }
}
